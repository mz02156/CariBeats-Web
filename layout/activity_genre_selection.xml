<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#070707"
    tools:context=".GenreSelectionActivity">

    <Spinner
        android:id="@+id/genreSpinner"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:backgroundTint="#FFEB3B"
        android:spinnerMode="dropdown"
        android:contentDescription="@string/select_genre" />

    <EditText
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="#545353"
        android:contentDescription="@string/search_hint"
        android:hint="@string/search_hint"
        android:inputType="text"
        android:textColor="#FFFFFF"
        android:textColorHint="#3A9DCA" />


    <Button
        android:id="@+id/toggleFilterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/toggle_filters"
        android:textColor="#FFFFFF"
        android:backgroundTint="#3F51B5"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/toggle_filters" />

    <Button
        android:id="@+id/spotifyLoginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login with Spotify" />


    <LinearLayout
        android:id="@+id/filterSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filter_danceability"
            android:textColor="#FFFFFF" />
        <SeekBar
            android:id="@+id/danceabilitySlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filter_energy"
            android:textColor="#FFFFFF" />
        <SeekBar
            android:id="@+id/energySlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filter_valence"
            android:textColor="#FFFFFF" />
        <SeekBar
            android:id="@+id/valenceSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filter_acousticness"
            android:textColor="#FFFFFF" />
        <SeekBar
            android:id="@+id/acousticnessSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filter_liveness"
            android:textColor="#FFFFFF" />
        <SeekBar
            android:id="@+id/livenessSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/filterLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingTop="12dp">

        <TextView
            android:id="@+id/danceVal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Danceability: 50" />

        <TextView
            android:id="@+id/energyVal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Energy: 50" />

        <TextView
            android:id="@+id/valenceVal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valence: 50" />

        <TextView
            android:id="@+id/acousticVal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acousticness: 50" />

        <TextView
            android:id="@+id/livenessVal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Liveness: 50" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/songRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2E2B2B" />
</LinearLayout>





