<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="edu.georgiasouthern.csci5530">

    <!-- Required for Jamendo or Spotify API and internet streaming -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CSCI5530"
        tools:targetApi="31">

        <!-- Splash screen as the launcher -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.CSCI5530">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main activity and Spotify redirect handler -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="https"
                    android:host="mz02156.github.io"
                    android:path="/CariBeats-Web/" />
            </intent-filter>
        </activity>

        <!-- Other screens -->
        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:theme="@style/Theme.CSCI5530" />

        <activity
            android:name=".PlaylistActivity"
            android:exported="false"
            android:theme="@style/Theme.CSCI5530" />

        <activity
            android:name=".StatsActivity"
            android:exported="false"
            android:theme="@style/Theme.CSCI5530" />

        <activity
            android:name=".PlaybackActivity"
            android:exported="false"
            android:theme="@style/Theme.CSCI5530" />

        <activity
            android:name=".GenreSelectionActivity"
            android:exported="false"
            android:theme="@style/Theme.CSCI5530" />
    </application>
</manifest>

