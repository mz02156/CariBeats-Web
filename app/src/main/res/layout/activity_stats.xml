<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#808DEB"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/moodStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mood Usage:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="12dp" />

        <TextView
            android:id="@+id/genreStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Top Genres:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="12dp" />

        <TextView
            android:id="@+id/avgTempo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Average Tempo:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="12dp" />

        <Button
            android:id="@+id/resetStatsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Stats"
            android:textColor="#FFFFFF"
            android:backgroundTint="#D32F2F"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
