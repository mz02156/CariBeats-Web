<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#070707"
    android:padding="16dp">

    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CariBeats"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#DB1313"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/appDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="        CariBeats is a music app that streams Caribbean genres like soca, dancehall, reggae, konpa, reggaeton, and non-Caribbean genres like, hiphop, pop and more automatically queuing songs with similar tempos to keep the energy flowing."
        android:textColor="#0BB611"
        android:textSize="14sp" />

    <Button
        android:id="@+id/useLocalButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Use Local Dataset"
        android:backgroundTint="#051FAD"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/statsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Mood &amp; Genre Stats"
        android:backgroundTint="#E9D421"
        android:textColor="#0B0B0B"
        android:layout_marginTop="12dp"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#121212"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white" />
</LinearLayout>



